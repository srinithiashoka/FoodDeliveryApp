/* =======================
   Responsive
======================= */

/* ----- Tablets ----- */
@media(max-width: 1023px) {
    .search-form { gap: 35px; }
    .input-wrapper { width: 200px; }
    .category-card, .restaurant-card { width: 45%; }
}

/* ----- Mobile ----- */
@media(max-width: 767px) {

    .nav-menu { display: none; }

    .search-form {
        flex-direction: column;
        gap: 18px;
    }

    .input-wrapper {
        width: 100%;
    }

    .search-box button {
        width: 100%;
    }

    .category-card, .restaurant-card {
        width: 90%;
    }
}

/* ----- Small Phones ----- */
@media(max-width: 480px) {
    .hero h1 { font-size: 2rem; }
    .hero p { font-size: 1rem; }
}
