    0% { opacity: 0; transform: translateY(15px); }
    100% { opacity: 1; transform: translateY(0); }
}

/* Scooter Icon */
.scooter-icon {
    font-size: 42px;
    color: #ffffff;
    opacity: 0;
    position: relative;
    left: -30px;
    animation: scooterDrive 2s ease-out forwards 1.5s; /* delayed after text */
}

@keyframes scooterDrive {
    0% { transform: translateX(-30px) rotate(-10deg); opacity: 0; }
    50% { transform: translateX(10px) rotate(5deg); opacity: 1; }
    100% { transform: translateX(0) rotate(0deg); opacity: 1; }
}

/* Hover effect */
.logo:hover .logo-text {
    color: #ffeaa7;
    text-shadow: 0 0 10px rgba(255,255,255,0.8);
    transition: 0.3s;
}

.logo:hover .scooter-icon {
    transform: translateX(5px) rotate(2deg);
    transition: 0.3s;
}

