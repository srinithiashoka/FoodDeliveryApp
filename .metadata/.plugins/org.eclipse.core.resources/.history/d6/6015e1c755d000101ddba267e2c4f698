<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ page import="com.foodapp.model.User"%>
<%@ page import="com.foodapp.dao.impl.OrderDAOImpl"%>
<%@ page import="com.foodapp.dao.impl.OrderItemDAOImpl"%>
<%@ page import="com.foodapp.model.Order"%>
<%@ page import="com.foodapp.model.OrderItem"%>
<%@ page import="com.foodapp.model.Menu"%>
<%@ page import="com.foodapp.dao.impl.MenuDAOImpl"%>
<%
    User user = (User) session.getAttribute("user");
    if(user == null) {
        response.sendRedirect("login.jsp");
        return;
    }

    OrderDAOImpl orderDAO = new OrderDAOImpl();
    OrderItemDAOImpl orderItemDAO = new OrderItemDAOImpl();
    MenuDAOImpl menuDAO = new MenuDAOImpl();

    Order latestOrder = orderDAO.getLatestOrderByUser(user.getUserId());
    List<OrderItem> orderItems = null;
    double totalAmount = 0;
    if(latestOrder != null){
        orderItems = orderItemDAO.getItemsByOrderId(latestOrder.getOrderId());
        for(OrderItem item : orderItems){
            totalAmount += item.getPrice() * item.getQuantity();
        }
    }

    // For progress tracker
    int step = 1; // Default step
    if(latestOrder != null){
        switch(latestOrder.getStatus()){
            case "Preparing": step = 1; break;
            case "On the way": step = 2; break;
            case "Delivered": step = 3; break;
        }
    }
%>

<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Track Order - FoodHub</title>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
<link rel="stylesheet" href="css/home.css">
<style>
body {display:flex;flex-direction:column;min-height:100vh;}
.track-section {flex:1;padding:40px 20px;display:flex;justify-content:center;align-items:flex-start;}
.track-box {background:white;padding:25px 20px;border-radius:12px;box-shadow:0 6px 18px rgba(0,0,0,0.1);max-width:600px;width:100%;}
.track-box h2 {color:#ff4757;margin-bottom:15px;text-align:center;font-size:1.5rem;}
.order-status {margin:15px 0;font-size:0.95rem;color:#555;}
.order-items {margin:20px 0;}
.order-item {display:flex;justify-content:space-between;padding:8px 0;border-bottom:1px solid #eee;}
.order-item:last-child {border-bottom:none;}
.total {display:flex;justify-content:space-between;font-weight:bold;margin-top:10px;font-size:1rem;}
.track-btn {display:inline-block;margin-top:20px;padding:10px 18px;background:#ff4757;color:white;border-radius:6px;text-decoration:none;font-weight:bold;transition:0.3s;}
.track-btn:hover {background:#e03c4c;transform:scale(1.05);}

/* Progress Tracker */
.progress-container {display:flex;justify-content:space-between;align-items:center;margin:25px 0;position:relative;}
.progress-bar {position:absolute;top:50%;left:0;width:100%;height:4px;background:#eee;transform:translateY(-50%);z-index:0;border-radius:2px;}
.progress-step {position:relative;z-index:1;width:40px;height:40px;background:#eee;border-radius:50%;display:flex;justify-content:center;align-items:center;font-weight:bold;color:#555;transition:0.3s;}
.progress-step.active {background:#ff4757;color:white;}
.progress-step.completed {background:#2ed573;color:white;}
.progress-label {position:absolute;top:50px;font-size:0.85rem;text-align:center;width:80px;margin-left:-20px;color:#555;}
.progress-step.completed::after {content:'\f00c'; font-family:'Font Awesome 6 Free'; font-weight:900; font-size:18px;}
</style>
</head>
<body>

<!-- HEADER -->
<header>
    <div class="container">
        <div class="navbar">
            <div class="logo">
                <i class="fa-solid fa-motorcycle scooter-icon"></i>
                <span>FoodHub</span>
            </div>
            <ul class="nav-menu">
                <li><a href="home.jsp">Home</a></li>
                <li><a href="#">Restaurants</a></li>
            </ul>
            <div class="nav-actions">
                <% if(user == null){ %>
                    <button class="btn btn-login" onclick="location.href='login.jsp'">Login</button>
                    <button class="btn btn-signup" onclick="location.href='signup.jsp'">Sign Up</button>
                <% } else { %>
                    <span>Welcome, <%= user.getUsername() %></span>
                <% } %>
            </div>
        </div>
    </div>
</header>

<!-- TRACK ORDER CONTENT -->
<section class="track-section">
    <div class="track-box">
        <h2>Track Your Order</h2>
        <% if(latestOrder == null){ %>
            <p class="order-status">You have no active orders.</p>
        <% } else { %>
            <p class="order-status"><strong>Order ID:</strong> <%= latestOrder.getOrderId() %></p>
            <p class="order-status"><strong>Placed on:</strong> <%= latestOrder.getOrderTime() %></p>

            <!-- Progress Tracker -->
            <div class="progress-container">
                <div class="progress-bar"></div>
                <div class="progress-step <%= step >= 1 ? "active" : "" %> <%= step > 1 ? "completed" : "" %>" style="left:0%">P</div>
                <div class="progress-step <%= step >= 2 ? "active" : "" %> <%= step > 2 ? "completed" : "" %>" style="left:50%">O</div>
                <div class="progress-step <%= step >= 3 ? "active" : "" %> <%= step > 3 ? "completed" : "" %>" style="left:100%">D</div>
                <span class="progress-label" style="left:0%">Preparing</span>
                <span class="progress-label" style="left:50%">On the Way</span>
                <span class="progress-label" style="left:100%">Delivered</span>
            </div>

            <!-- Ordered Items -->
            <div class="order-items">
                <% for(OrderItem item : orderItems){
                    Menu menu = menuDAO.getMenuItemById(item.getMenuId());
                %>
                <div class="order-item">
                    <span><%= item.getQuantity() %> x <%= menu.getItemName() %></span>
                    <span>₹<%= String.format("%.2f", item.getPrice() * item.getQuantity()) %></span>
                </div>
                <% } %>
                <div class="total">
                    <span>Total Amount:</span>
                    <span>₹<%= String.format("%.2f", totalAmount) %></span>
                </div>
            </div>
            <a href="home.jsp" class="track-btn">Back to Home</a>
        <% } %>
    </div>
</section>

<!-- FOOTER -->
<footer>
    <div class="container">
        <p>© 2025 FoodHub | All Rights Reserved | Made with ❤️ in Coimbatore</p>
    </div>
</footer>

