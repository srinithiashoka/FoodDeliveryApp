            <%
                double grandTotal = 0;
                int count = 1;
                for(OrderItem item : orderItems){
                    Menu menu = menuDAO.getMenuItemById(item.getMenuId());
                    if(menu != null){
                        double itemTotal = item.getQuantity() * menu.getPrice();
                        grandTotal += itemTotal;
            %>
            <tr>
                <td><%= count++ %></td>
                <td><%= menu.getItemName() %></td>
                <td><%= item.getQuantity() %></td>
                <td>₹<%= String.format("%.2f", menu.getPrice()) %></td>
                <td>₹<%= String.format("%.2f", itemTotal) %></td>
            </tr>
            <%
                    } else {
            %>
            <tr>
                <td colspan="5" style="color:red;">Menu item not found for ID: <%= item.getMenuId() %></td>
            </tr>
            <%
                    }
                }
            %>
            <tr class="total-row">
                <td colspan="4">Grand Total</td>
                <td>₹<%= String.format("%.2f", grandTotal) %></td>
            </tr>
        </tbody>
    </table>

