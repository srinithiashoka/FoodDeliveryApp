<script>
function updateGrandTotal() {
    let total = 0;
    document.querySelectorAll('#cart-body tr').forEach(row => {
        const price = parseFloat(row.querySelector('.price').textContent);
        const qty = parseInt(row.querySelector('.qty').textContent);
        row.querySelector('.total').textContent = (price * qty).toFixed(2);
        total += price * qty;
    });
    let tax = total * 0.05;
    let discount = total * 0.10;
    let grandTotal = total + tax - discount;

    const totalsBox = document.querySelector('.totals-box');
    if(totalsBox){
        totalsBox.querySelectorAll('p')[0].querySelector('span').textContent = total.toFixed(2);
        totalsBox.querySelectorAll('p')[1].querySelector('span').textContent = tax.toFixed(2);
        totalsBox.querySelectorAll('p')[2].querySelector('span').textContent = discount.toFixed(2);
        totalsBox.querySelectorAll('p')[3].querySelector('span').textContent = grandTotal.toFixed(2);
    }
}

document.getElementById('cart-body')?.addEventListener('click', e => {
    const tr = e.target.closest('tr');
    if (!tr) return;
    const qtyElem = tr.querySelector('.qty');
    let qty = parseInt(qtyElem.textContent);

    if(e.target.classList.contains('increase')) qty += 1;
    if(e.target.classList.contains('decrease')) qty -= 1;
    if(e.target.classList.contains('remove-btn')) qty = 0;

    if(qty <= 0) tr.remove();
    else qtyElem.textContent = qty;

    updateGrandTotal();
});

document.getElementById('checkout-btn')?.addEventListener('click', () => {
    const selectedPayment = document.querySelector('input[name="payment"]:checked').value;
    const grandTotal = document.querySelector('.totals-box p:last-child span').textContent;
    alert(`Grand Total: ₹${grandTotal}\nPayment Method: ${selectedPayment}`);
});
</script>
