<!-- TRACK ORDER SECTION -->
<section class="track-section">
    <div class="track-box">
        <h2>Track Your Order</h2>
        <% if(orderItems != null && !orderItems.isEmpty()) {
               for(OrderItem item : orderItems){
                   Menu menu = menuDAO.getMenuItemById(item.getMenuId());
                   double itemTotal = menu.getPrice() * item.getQuantity();
                   totalAmount += itemTotal;
        %>
            <div class="order-item">
                <span><%= item.getQuantity() %> x <%= menu.getItemName() %></span>
                <span>₹<%= String.format("%.2f", itemTotal) %></span>
            </div>
        <%   } %>
            <div class="order-total">
                <span>Total Amount:</span>
                <span>₹<%= String.format("%.2f", totalAmount) %></span>
            </div>
        <% } else { %>
            <p style="text-align:center; color:#555;">No items found for this order.</p>
        <% } %>
    </div>
</section>

