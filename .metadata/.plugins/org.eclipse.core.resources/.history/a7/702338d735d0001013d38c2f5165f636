                <% if(user == null){ %>
                    <button onclick="location.href='login.jsp'" class="btn btn-login">Login</button>
                    <button onclick="location.href='signup.jsp'" class="btn btn-signup">Sign Up</button>
                <% } else { %>
                    <span>Welcome, <%= user.getUsername() %></span>
                <% } %>
                <div class="cart-icon-wrapper">
                    <a href="cart.jsp"><i class="fas fa-shopping-cart"></i></a>
                    <% if(cartItems.size() > 0) { %>
                        <span class="cart-badge"><%= cartItems.size() %></span>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="cart-container">
    <a href="home.jsp" class="back-link"><i class="fa fa-arrow-left"></i> Back to Restaurants</a>
    <h2>Your Cart</h2>

    <% if(cartItems.isEmpty()){ %>
        <p class="empty-cart">Your cart is empty.</p>
    <% } else {
        for(CartItem item : cartItems){ %>
            <div class="cart-item">
                <div class="cart-image">
                    <img src="<%= (item.getMenuId() != null) 
                                ? ("images/menu_" + item.getMenuId() + ".jpg") 
                                : "images/default-food.jpg" %>" 
                         alt="<%= item.getFoodName() %>">
                </div>
                <div class="cart-content">
                    <div class="cart-header">
                        <h3><%= item.getFoodName() %></h3>
                        <div class="cart-price" data-price="<%= item.getPrice() %>">₹<%= item.getPrice() %></div>
                    </div>
                    <div class="quantity-controls">
                        <button class="qty-btn decrease">-</button>
                        <input type="text" class="quantity-input" value="<%= item.getQuantity() %>" readonly>
                        <button class="qty-btn increase">+</button>
                        <button class="btn-remove">Remove</button>
                    </div>
                </div>
            </div>
    <% }} %>

    <!-- SUMMARY & PAYMENT -->
    <div class="cart-summary">
        <h3>Order Summary</h3>
        <div class="summary-row">Subtotal <span id="subtotal">₹<%= String.format("%.2f", subtotal) %></span></div>
        <div class="summary-row">Tax (5%) <span id="tax">₹<%= String.format("%.2f", tax) %></span></div>
        <div class="summary-row">Discount (10%) <span id="discount">-₹<%= String.format("%.2f", discount) %></span></div>
        <div class="summary-row grand-total">Grand Total <span id="grandTotal">₹<%= String.format("%.2f", grandTotal) %></span></div>

        <div class="payment-method">
            <h4>Select Payment Method:</h4>
            <label><input type="radio" name="payment" value="cod" checked> Cash on Delivery</label>
            <label><input type="radio" name="payment" value="card"> Credit/Debit Card</label>
        </div>

        <button class="checkout-btn" onclick="confirmOrder()">Confirm Order</button>
    </div>
</div>

