<script>
const isLoggedIn = <%= (user != null) ? "true" : "false" %>;

// Update cart badge safely
function updateCartBadge() {
    fetch('<%=request.getContextPath()%>/cart?action=viewcount')
        .then(res => res.json())
        .then(data => {
            const badge = document.querySelector(".cart-badge");
            if (badge) badge.textContent = data.count || 0;
        })
        .catch(err => console.error(err));
}

// Optional: If you add menu items to home page later
function getMenuId(item) {
    const menuInput = item.querySelector(".menu-id");
    if (!menuInput) return 0;
    const menuId = parseInt(menuInput.value.trim(), 10);
    return (isNaN(menuId) || menuId <= 0) ? 0 : menuId;
}

function addToCart(menuId, quantity, action) {
    if (!isLoggedIn) { window.location.href="login.jsp"; return; }
    if (menuId <= 0) { alert("Invalid menu item"); return; }

    quantity = (isNaN(quantity) || quantity < 0) ? 0 : quantity;

    const body = "action=" + encodeURIComponent(action) +
                 "&menuId=" + encodeURIComponent(menuId) +
                 "&quantity=" + encodeURIComponent(quantity);

    fetch("<%=request.getContextPath()%>/cart", {
        method:"POST",
        headers:{ "Content-Type":"application/x-www-form-urlencoded" },
        body: body
    })
    .then(res => res.json())
    .then(data => {
        if(data.status==="success") {
            alert(data.message || "Cart updated");
            updateCartBadge();
        } else alert(data.message || "Failed to update cart");
    })
    .catch(err => console.error(err));
}

window.onload = updateCartBadge;
</script>

