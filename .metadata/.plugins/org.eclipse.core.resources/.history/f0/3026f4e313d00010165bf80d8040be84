<div id="toast"></div>
<footer><p>© 2025 FoodHub | All Rights Reserved</p></footer>

<script type="text/javascript">
//<![CDATA[
const isLoggedIn = <%= (userId != null) ? "true" : "false" %>;

function showToast(message) {
    const toast = document.getElementById('toast');
    toast.textContent = message;
    toast.classList.add('show');
    setTimeout(() => toast.classList.remove('show'), 2500);
}

function getMenuId(item) {
    const menuInput = item.querySelector(".menu-id");
    if (!menuInput) return 0;
    const trimmed = menuInput.value.trim();
    const menuId = parseInt(trimmed, 10);
    return (isNaN(menuId) || menuId <= 0) ? 0 : menuId;
}

function addToCart(menuId, quantity, action) {
    if (!isLoggedIn) { 
        window.location.href = "<%=request.getContextPath()%>/login.jsp"; 
        return; 
    }
    if (menuId <= 0) {
        showToast("Invalid menu item");
        return;
    }

    const body = "action=" + encodeURIComponent(action) + 
                 "&menuId=" + encodeURIComponent(menuId) + 
                 "&quantity=" + encodeURIComponent(quantity);

    fetch("<%=request.getContextPath()%>/cart", {
        method: "POST",
        headers: { "Content-Type": "application/x-www-form-urlencoded" },
        body: body
    })
    .then(res => res.json())
    .then(data => {
        if (data.status === "success") {
            showToast(data.message || "Cart updated successfully");
            // Update cart badge
            const badge = document.querySelector(".cart-badge");
            if (badge && data.count !== undefined) badge.textContent = data.count;
        } else {
            showToast(data.message || "Cart update failed");
        }
    })
    .catch(err => { console.error(err); showToast("Network error"); });
}

document.querySelectorAll(".menu-item-wrapper").forEach((item) => {
    const decrease = item.querySelector(".decrease");
    const increase = item.querySelector(".increase");
    const clearBtn = item.querySelector(".clear");
    const addBtn = item.querySelector(".btn-add");
    const input = item.querySelector(".quantity-input-display");

    if (decrease) decrease.onclick = () => { let val = parseInt(input.value||"0",10); if(val>0) input.value=val-1; };
    if (increase) increase.onclick = () => { let val = parseInt(input.value||"0",10); input.value=val+1; };
    if (clearBtn) clearBtn.onclick = () => { input.value=0; const menuId=getMenuId(item); if(menuId>0) addToCart(menuId,0,"remove"); };
    if (addBtn) addBtn.onclick = () => { const menuId=getMenuId(item); const qty=parseInt(input.value||"0",10); addToCart(menuId, qty, qty>0?"add":"remove"); };
});

// Initial fetch of cart count
window.onload = () => {
    fetch("<%=request.getContextPath()%>/cart?action=viewcount")
        .then(res => res.json())
        .then(data => {
            const badge = document.querySelector(".cart-badge");
            if (badge && data.count !== undefined) badge.textContent = data.count;
        })
        .catch(err => console.error(err));
};
//]]>
</script>

</body>
</html>
