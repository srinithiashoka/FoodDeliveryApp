    <div class="container">
        <div class="navbar">
            <div class="logo"><i class="fa-solid fa-motorcycle scooter-icon"></i> <span class="logo-text">FoodHub</span></div>
            <ul class="nav-menu">
                <li><a href="home.jsp">Home</a></li>
                <li><a href="#">Restaurants</a></li>
                <li><a href="#">Offers</a></li>
