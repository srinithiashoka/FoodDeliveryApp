<!-- TRACK ORDER -->
<section class="track-section">
    <div class="track-box">
        <h2>Track Your Order (#<%= orderId %>)</h2>
        
        <% if(orderItems.isEmpty()){ %>
            <p style="text-align:center; color:#555;">No items found for this order.</p>
        <% } else {
            for(OrderItem item : orderItems){
                Menu menu = menuDAO.getMenuItemById(item.getMenuId());
                if(menu != null){
                    double itemTotal = item.getQuantity() * menu.getPrice();
                    totalAmount += itemTotal;
        %>
            <div class="order-item">
                <img src="<%= menu.getImagePath()!=null && !menu.getImagePath().isEmpty() ? menu.getImagePath() : "images/default-food.jpg" %>" alt="<%= menu.getItemName() %>">
                <div class="order-item-info">
                    <h4><%= menu.getItemName() %></h4>
                    <p>Quantity: <%= item.getQuantity() %> | Price: ₹<%= String.format("%.2f", menu.getPrice()) %></p>
                    <p>Total: ₹<%= String.format("%.2f", itemTotal) %></p>
                </div>
            </div>
        <%  } } %>

        <div class="order-total">Grand Total: ₹<%= String.format("%.2f", totalAmount) %></div>
        <a href="home.jsp" class="back-home">Back to Home</a>
        <% } %>
    </div>
</section>

