<div class="container menu-container">
    <a href="home.jsp" class="back-link"><i class="fa fa-arrow-left"></i> Back to Restaurants</a>
    <h1 style="text-align:center; margin-bottom:20px; color:#ff4757;">Menu</h1>

    <% if (menuList != null && !menuList.isEmpty()) { %>
        <button class="clear-all" onclick="clearEntireCart()">Clear All Items</button>

        <% for (Menu m : menuList) { %>
        <div class="menu-item menu-item-wrapper">
            <div class="menu-image">
                <img src="<%= (m.getImagePath() != null && !m.getImagePath().isEmpty()) 
                            ? m.getImagePath() 
                            : "images/restaurants/" + m.getRestaurantId() + "/" + m.getMenuId() + ".jpg" %>" 
                     alt="<%= m.getItemName() %>">
            </div>
            <div class="menu-content">
                <div class="menu-header">
                    <h3><%= m.getItemName() %></h3>
                    <span class="menu-price">₹<%= m.getPrice() %></span>
                </div>
                <p class="menu-description"><%= m.getDescription() %></p>

                <div class="quantity-controls">
                    <button type="button" class="qty-btn decrease">-</button>
                    <input type="text" value="0" class="quantity-input-display" readonly>
                    <button type="button" class="qty-btn increase">+</button>
                    <button type="button" class="qty-btn clear">Clear</button>
                    <button type="button" class="btn-add" <%= !m.isAvailable() ? "disabled" : "" %>>Add to Cart</button>
                </div>

                <!-- Hidden id used by JS, no debug text -->
                <input type="hidden" class="menu-id" value="<%= m.getMenuId() %>">
            </div>
        </div>
        <% } %>
    <% } else { %>
        <p style="text-align:center; color:red; width:100%;">No menu items available.</p>
    <% } %>
</div>

<div id="toast"></div>
<footer><p>© 2025 FoodHub | All Rights Reserved</p></footer>

<script type="text/javascript">
//<![CDATA[
    const isLoggedIn = <%= (userId != null) ? "true" : "false" %>;

    function showToast(message) {
        const toast = document.getElementById('toast');
        toast.textContent = message;
        toast.classList.add('show');
        setTimeout(() => toast.classList.remove('show'), 2500);
    }

    function getMenuId(item) {
        const menuInput = item.querySelector(".menu-id");
        if (!menuInput) {
            console.error("No .menu-id input found");
            return 0;
        }
        const trimmed = menuInput.value.trim();
        const menuId = parseInt(trimmed, 10);
        return (isNaN(menuId) || menuId <= 0) ? 0 : menuId;
    }

    function addToCart(menuId, quantity, action) {
        if (!isLoggedIn) { 
            window.location.href = "<%=request.getContextPath()%>/login.jsp"; 
            return; 
        }
        if (menuId <= 0) {
            showToast("Invalid menu item");
            return;
        }
        const body = "action=" + encodeURIComponent(action) + 
                     "&menuId=" + encodeURIComponent(menuId) + 
                     "&quantity=" + encodeURIComponent(quantity);

        fetch("<%=request.getContextPath()%>/cart", {
            method: "POST",
            headers: { "Content-Type": "application/x-www-form-urlencoded" },
            body: body
        })
        .then(res => res.json())
        .then(data => {
            if (data.status === "success") {
                showToast(data.message);
                updateCartBadge();
            } else {
                showToast(data.message || "Cart update failed");
            }
        })
        .catch(err => { 
            console.error("Fetch error:", err); 
            showToast("Network error"); 
        });
    }

    function updateCartBadge() {
        fetch("<%=request.getContextPath()%>/cart?action=viewcount")
            .then(res => res.json())
            .then(data => {
                const badge = document.querySelector(".cart-badge");
                if (badge) badge.textContent = data.count || 0;
            })
            .catch(err => console.error(err));
    }

    function clearEntireCart() {
        if (!isLoggedIn) { 
            window.location.href = "<%=request.getContextPath()%>/login.jsp"; 
            return; 
        }
        fetch("<%=request.getContextPath()%>/cart", {
            method: "POST",
            headers: { "Content-Type": "application/x-www-form-urlencoded" },
            body: "action=clear"
        })
        .then(res => res.json())
        .then(data => {
            if (data.status === "success") {
                showToast(data.message);
                document.querySelectorAll(".quantity-input-display").forEach(inp => inp.value = 0);
                updateCartBadge();
            }
        });
    }

    document.querySelectorAll(".menu-item-wrapper").forEach((item, index) => {
        const decrease = item.querySelector(".decrease");
        const increase = item.querySelector(".increase");
        const clearBtn = item.querySelector(".clear");
        const addBtn = item.querySelector(".btn-add");
        const input = item.querySelector(".quantity-input-display");

        if (decrease) {
            decrease.onclick = function() { 
                let val = parseInt(input.value || "0", 10); 
                if (val > 0) input.value = val - 1; 
            };
        }
        if (increase) {
            increase.onclick = function() { 
                let val = parseInt(input.value || "0", 10); 
                input.value = val + 1; 
            };
        }
        if (clearBtn) {
            clearBtn.onclick = function() { 
                input.value = 0; 
                const menuId = getMenuId(item);
                if (menuId > 0) addToCart(menuId, 0, "remove");
            };
        }
        if (addBtn) {
            addBtn.onclick = function() {
                const menuId = getMenuId(item);
                const qty = parseInt(input.value || "0", 10);
                if (menuId <= 0) {
                    showToast("Invalid menu item");
                    return;
                }
                addToCart(menuId, qty, qty > 0 ? "add" : "remove");
            };
        }
    });

    window.onload = updateCartBadge;
//]]>
</script>

</body>
</html>
