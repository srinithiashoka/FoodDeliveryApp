<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ page import="java.util.List" %>
<%@ page import="com.foodapp.dao.RestaurantDAO" %>
<%@ page import="com.foodapp.dao.impl.RestaurantDAOImpl" %>
<%@ page import="com.foodapp.model.Restaurant" %>
<%@ page import="com.foodapp.model.User" %>

<%
    String location = request.getParameter("location");
    String restaurantName = request.getParameter("restaurant");
    RestaurantDAO dao = new RestaurantDAOImpl();
    List<Restaurant> restaurants = (location != null || restaurantName != null) 
            ? dao.searchRestaurants(location, restaurantName) 
            : dao.getActiveRestaurants();
    User user = (User) session.getAttribute("user");
%>

<!DOCTYPE html>
<html>
