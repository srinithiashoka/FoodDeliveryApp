    <div class="items-box">
        <h3>Order Summary</h3>

        <% double finalTotal = 0; %>

        <% for (OrderItem it : items) {
        	Menu m = menuDAO.getMenuItemById(it.getMenuId());
                finalTotal += it.getTotalPrice();
        %>

            <div class="item-row">
                <span><%= m.getItemName() %> × <%= it.getQuantity() %></span>
                <span>₹ <%= it.getTotalPrice() %></span>
            </div>

        <% } %>

        <div class="total">
            Total Amount: ₹ <%= finalTotal %>
        </div>
