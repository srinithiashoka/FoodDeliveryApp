<script>
// Quantity update & remove
document.querySelectorAll('.cart-item').forEach(item=>{
    const qtyElem = item.querySelector('.qty');
    const totalElem = item.querySelector('.item-total');
    const price = parseFloat(item.querySelector('p').textContent.replace('Price: ₹',''));
    
    item.querySelector('.increase').addEventListener('click', ()=>{
        let qty = parseInt(qtyElem.textContent)+1;
        qtyElem.textContent = qty;
        totalElem.textContent = '₹'+(price*qty).toFixed(2);
    });
    item.querySelector('.decrease').addEventListener('click', ()=>{
        let qty = parseInt(qtyElem.textContent);
        if(qty>1){ qty--; qtyElem.textContent = qty; totalElem.textContent='₹'+(price*qty).toFixed(2);}
    });
    item.querySelector('.remove-item').addEventListener('click', ()=>{
        item.remove();
    });
});
</script>

</body>
