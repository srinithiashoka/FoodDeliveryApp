<script>
function updateTotals() {
    let subtotal = 0;
    document.querySelectorAll('.cart-item').forEach(item => {
        const qty = parseInt(item.querySelector('.quantity-input').value) || 0;
        const price = parseFloat(item.querySelector('.cart-price').dataset.price) || 0;
        subtotal += qty * price;
    });
    const tax = subtotal * 0.05;
    const discount = subtotal * 0.1;
    const grandTotal = subtotal + tax - discount;

    document.getElementById('subtotal').textContent = '₹' + subtotal.toFixed(2);
    document.getElementById('tax').textContent = '₹' + tax.toFixed(2);
    document.getElementById('discount').textContent = '-₹' + discount.toFixed(2);
    document.getElementById('grandTotal').textContent = '₹' + grandTotal.toFixed(2);
}

function updateCartServer(menuId, quantity) {
    fetch('updateCart', {
        method: 'POST',
        headers: {'Content-Type': 'application/x-www-form-urlencoded'},
        body: `menuId=${menuId}&quantity=${quantity}`
    }).catch(err => console.error('Cart update failed:', err));
}

// Initialize event listeners after DOM loads
document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.cart-item').forEach(item => {
        const qtyInput = item.querySelector('.quantity-input');
        
        // Increase button
        item.querySelector('.increase').addEventListener('click', () => {
            let currentQty = parseInt(qtyInput.value) || 1;
            qtyInput.value = currentQty + 1;
            updateTotals();
            updateCartServer(item.dataset.menuId, qtyInput.value);
        });
        
        // Decrease button
        item.querySelector('.decrease').addEventListener('click', () => {
            let currentQty = parseInt(qtyInput.value) || 1;
            if(currentQty > 1) {
                qtyInput.value = currentQty - 1;
                updateTotals();
                updateCartServer(item.dataset.menuId, qtyInput.value);
            }
        });
        
        // Remove button
        item.querySelector('.btn-remove').addEventListener('click', () => {
            updateCartServer(item.dataset.menuId, 0);
            item.style.opacity = '0.5';
            setTimeout(() => item.remove(), 300);
            updateTotals();
        });
        
        // Quantity input change
        qtyInput.addEventListener('change', () => {
            let qty = parseInt(qtyInput.value) || 1;
            if(qty < 1) qty = 1;
            if(qty > 99) qty = 99;
            qtyInput.value = qty;
            updateTotals();
            updateCartServer(item.dataset.menuId, qty);
        });
    });
});
</script>

</body>
</html>
