<%
    User user = (User) session.getAttribute("user");
    Integer orderId = (Integer) session.getAttribute("lastOrderId"); // or pass as request parameter

    if(orderId == null){
        response.sendRedirect("home.jsp");
        return;
    }

    // Fetch order items
    OrderItemDAOImpl orderItemDAO = new OrderItemDAOImpl();
    MenuDAOImpl menuDAO = new MenuDAOImpl();
    List<OrderItem> orderItems = orderItemDAO.getItemsByOrder(orderId);

    // Simulated order status (in real app, fetch from Order table)
    String orderStatus = "Out for Delivery"; // Options: "Order Placed", "Preparing", "Out for Delivery", "Delivered"
%>

